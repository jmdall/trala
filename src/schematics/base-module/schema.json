{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsTralalereBaseModule",
  "title": "Tralalere Base Module Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the module.",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "description": "Destination path for templated files.",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": [
    "name"
  ]
}