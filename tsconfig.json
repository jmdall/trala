{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
